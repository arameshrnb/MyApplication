<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
android:layout_height="match_parent" android:orientation="vertical"
tools:context="com.imimobile.feildforce.fragments.ChatUsersFragment">

<EditText android:layout_width="match_parent" android:id="@+id/search_task" android:drawableRight="@drawable/search_icon"
    android:layout_marginRight="10dp" android:layout_marginLeft="10dp"
    android:layout_height="wrap_content" android:imeOptions="actionSearch" />

<android.support.v7.widget.RecyclerView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:dividerHeight="0dp"
    android:padding="5dp"
    android:divider="@android:color/transparent"
    android:id="@+id/chatUsersRecyclerView"
    />

</LinearLayout>
